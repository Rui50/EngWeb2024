extends layout

block content
    .w3-card-4 
        header.w3-container.w3-blue
            h1 Compositor #{Compositor.id}
        
        .w3-container 
            ul.w3-ul.w3-card-4(style="width:40%")
                li 
                    b Nome:
                    span= Compositor.nome
                li 
                    b ID: 
                    span= Compositor.id 
                li
                    b Periodo:
                    a(href="/compositores?periodo=" + Compositor.periodo)= Compositor.periodo 
                li 
                    b Data Nascimento:
                    span= Compositor.dataNasc 
                li
                    b Data Obito:
                    span= Compositor.dataObito 
                li 
                    b Bio:
                    span= Compositor.bio
        
        footer.w3-container.w3-teal 
            address
                span Gerado em #{date} - [
                a(href="/compositores") Voltar
                span ]